<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selecao_busca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ftfnunes.booknet.SelecaoBusca">

    <TextView
        android:text="Reputacao Do Usuario :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="20dp"
        android:id="@+id/textDesc" />

    <TextView
        android:text="UsuarioEmprestador"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/usuarioEmp"
        android:layout_alignBaseline="@+id/textDesc"
        android:layout_alignBottom="@+id/textDesc"
        android:layout_alignEnd="@+id/textGenero" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Solicitar"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonSol" />

    <TextView

        android:text="NomeDoLivro"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/TituloText"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Autor"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textAutor"
        android:layout_below="@+id/TituloText"
        android:layout_alignStart="@+id/TituloText"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Genero"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/textGenero"
        android:layout_below="@+id/textAutor"
        android:layout_alignStart="@+id/textAutor"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_menu_camera"
        android:id="@+id/imageView"
        android:layout_marginStart="23dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Edicao"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/textEdicao"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textGenero"
        android:layout_alignStart="@+id/textGenero" />

    <TextView
        android:text="Descricao"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textEdicao"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
